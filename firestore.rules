rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is a teacher
    function isTeacher() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user documents (needed for login shim to check passwords)
      allow read: if true;
      
      // Only the user themselves or a teacher can update
      allow update: if isAuthenticated() && 
                      (request.auth.uid == userId || isTeacher());
      
      // Only teachers can create new users
      allow create: if isTeacher();
      
      // Only teachers can delete users
      allow delete: if isTeacher();
    }
    
    // App approvals - only teachers can manage
    match /app_approvals/{appId} {
      allow read: if isAuthenticated();
      allow write: if isTeacher();
    }
    
    // Usage logs - anyone authenticated can create, only teachers can read
    match /usage_logs/{logId} {
      allow read: if isTeacher();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Logs should not be modified
    }
    
    // User agreements - users can read/write their own, teachers can read all
    match /user_agreements/{userId} {
      allow read: if isAuthenticated() && 
                    (request.auth.uid == userId || isTeacher());
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
